
{
  "manifest_version": 3,
  "name": "AutoBing",
  "version": "1.0",
  "description": "Educational only â€” human-like Bing searches",
  "action": {
    "default_popup": "popup.html",
    "default_title": "AutoBing"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://www.bing.com/*",
    "https://bing.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.bing.com/*", "https://bing.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
